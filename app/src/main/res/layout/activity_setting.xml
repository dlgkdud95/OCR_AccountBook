<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".SettingActivity">

    <TextView
        android:id="@+id/tv_outLimit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/applesdgothicneom"
        android:text="지출제한금액"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_outLimit"
        android:layout_width="200dp"
        android:layout_height="44dp"
        android:layout_marginStart="12dp"
        android:backgroundTint="#7CD685"
        android:ems="10"
        android:fontFamily="@font/applesdgothicneom"
        android:inputType="numberSigned"
        android:text="0"
        app:layout_constraintBottom_toBottomOf="@+id/tv_outLimit"
        app:layout_constraintStart_toEndOf="@+id/tv_outLimit"
        app:layout_constraintTop_toTopOf="@+id/tv_outLimit"
        app:layout_constraintVertical_bias="0.461" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="79dp"
        android:layout_height="44dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/inout_buttonui"
        android:fontFamily="@font/applesdgothicneom"
        android:text="저장"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/applesdgothicneom"
        android:text="닉네임"
        app:layout_constraintStart_toStartOf="@+id/tv_outLimit"
        app:layout_constraintTop_toBottomOf="@+id/tv_outLimit" />

    <EditText
        android:id="@+id/et_name"
        android:layout_width="200dp"
        android:layout_height="38dp"
        android:backgroundTint="#7CD685"
        android:ems="10"
        android:fontFamily="@font/applesdgothicneom"
        android:inputType="textPersonName"
        android:text="Name"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name"
        app:layout_constraintEnd_toEndOf="@+id/et_outLimit"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/tv_name"
        app:layout_constraintTop_toTopOf="@+id/tv_name"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/tv_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="데이터삭제"
        android:fontFamily="@font/applesdgothicneom"
        app:layout_constraintStart_toStartOf="@+id/tv_outLimit"
        app:layout_constraintTop_toBottomOf="@+id/tv_name" />

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="80dp"
        android:layout_height="41dp"
        android:layout_marginStart="50dp"
        android:background="@drawable/inout_buttonui"
        android:fontFamily="@font/applesdgothicneom"
        android:text="전체삭제"
        app:layout_constraintBottom_toBottomOf="@+id/tv_del"
        app:layout_constraintEnd_toEndOf="@+id/et_name"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/et_name"
        app:layout_constraintTop_toTopOf="@+id/tv_del"
        app:layout_constraintVertical_bias="0.521" />
</androidx.constraintlayout.widget.ConstraintLayout>