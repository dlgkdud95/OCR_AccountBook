<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:drawable/editbox_background_normal"
    android:backgroundTint="#EBEDD7">


    <TextView

        android:id="@+id/item_tv_type"
        android:layout_width="53dp"
        android:layout_height="37dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="지출"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_tv_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="디테일 적는 곳"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/item_tv_type"
        app:layout_constraintTop_toBottomOf="@+id/item_tv_type" />

    <TextView
        android:id="@+id/item_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="2021-10-13"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_tv_detail"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/item_tv_cost"
        android:layout_width="85dp"
        android:layout_height="34dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="50dp"
        android:text="10000"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/item_tv_type"
        app:layout_constraintEnd_toStartOf="@+id/item_tv_payment"
        app:layout_constraintStart_toEndOf="@+id/item_tv_type"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_tv_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="식비"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/item_tv_date"
        app:layout_constraintStart_toStartOf="@+id/item_tv_date" />

    <TextView
        android:id="@+id/item_tv_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="체크카드"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="@+id/item_tv_cost"
        app:layout_constraintStart_toEndOf="@+id/item_tv_cost" />
</androidx.constraintlayout.widget.ConstraintLayout>