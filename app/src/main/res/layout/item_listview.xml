<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="410dp"
    android:layout_height="70dp"
    android:background="@android:drawable/editbox_background_normal"
    android:backgroundTint="#E8F2F3EB">


    <ScrollView
        android:layout_width="413dp"
        android:layout_height="729dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

    <TextView

        android:id="@+id/item_tv_type"
        android:layout_width="50dp"
        android:layout_height="27dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="지출"
        android:textColor="#03887C"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_tv_detail"
        android:layout_width="241dp"
        android:layout_height="26dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:text="디테일 적는 곳"
        android:textColor="#B3000000"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/item_tv_type"
        app:layout_constraintTop_toBottomOf="@+id/item_tv_type"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/item_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="36dp"
        android:text="2021-10-13"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@+id/item_tv_detail"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/item_tv_cost"
        android:layout_width="83dp"
        android:layout_height="29dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="50dp"
        android:text="10000"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/item_tv_type"
        app:layout_constraintEnd_toStartOf="@+id/item_tv_payment"
        app:layout_constraintStart_toEndOf="@+id/item_tv_type"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/item_tv_category"
        android:layout_width="100dp"
        android:layout_height="17dp"
        android:layout_marginBottom="4dp"
        android:text="식비"
        android:textColor="#B3000000"
        android:textSize="15sp"
        app:layout_constraintBottom_toTopOf="@+id/item_tv_date"
        app:layout_constraintStart_toStartOf="@+id/item_tv_date" />

    <TextView
        android:id="@+id/item_tv_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="52dp"
        android:text="체크카드"
        android:textColor="#80000000"
        app:layout_constraintBottom_toBottomOf="@+id/item_tv_cost"
        app:layout_constraintStart_toEndOf="@+id/item_tv_cost" />
</androidx.constraintlayout.widget.ConstraintLayout>